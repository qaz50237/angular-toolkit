{
  "version": "6.1.1",
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "allowBranch": "stable",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish [skip ci]",
      "tagVersionPrefix": ""
    },
    "publish": {
      "verifyAccess": false
    }
  }
}
